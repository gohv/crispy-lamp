<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/visible"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/border_value"
    android:paddingLeft="@dimen/border_value"
    android:paddingRight="@dimen/border_value"
    android:paddingTop="@dimen/border_value"
    android:background="@android:color/background_light"
 >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:background="@drawable/price_border"
        android:hint="@string/form_price"
        android:ems="10"
        android:padding="@dimen/edittext_padding"
        android:layout_marginTop="48dp"
        android:id="@+id/priceEditText"
        android:layout_below="@+id/descriptionEditText"
        android:layout_alignLeft="@+id/descriptionEditText"
        android:layout_alignStart="@+id/descriptionEditText" />

    <TextView
        android:text="@string/general_info_value"
        android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priceEditText"
        android:layout_alignLeft="@+id/priceEditText"
        android:layout_alignStart="@+id/priceEditText"
        android:id="@+id/labelTextView" />

    <Button
        android:text="Next"
        android:background="@drawable/button_border"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/form_title"
        android:ems="10"
        android:padding="@dimen/edittext_padding"
        android:background="@drawable/title_border"
        android:layout_marginTop="81dp"
        android:id="@+id/nameEditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="â‚¬"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/euroTextView"
        android:layout_above="@+id/labelTextView"
        android:layout_toRightOf="@+id/priceEditText"
        android:layout_toEndOf="@+id/priceEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:padding="@dimen/edittext_padding"
        android:inputType="text"
        android:hint="@string/form_description"
        android:background="@drawable/description_border"
        android:ems="10"
        android:layout_marginTop="52dp"
        android:id="@+id/descriptionEditText"
        android:layout_below="@+id/nameEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>

